<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLTopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="@drawable/rectangle_blue"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imBack"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_back" />

                        <ImageView
                            android:id="@+id/imInfo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_about"
                            android:tint="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <RelativeLayout
                            android:id="@+id/LLOpenTikTok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <RelativeLayout
                                android:id="@+id/TVTitleContainer"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true">

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminateTint="@color/pink"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/TVTitle"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_tiktok_round"
                                    android:tint="@color/white" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/TVTitleContainer"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="Open TikTok"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lnr_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RLTopLayout"
                    android:layout_marginTop="-80dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/RLEdittextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/rectangle_white"
                        android:elevation="3dp"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/etContainer">
                            <EditText
                                android:id="@+id/et_text"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/et_back"
                                android:hint="Paste Link"
                                android:padding="15dp"
                                android:singleLine="true"
                                android:layout_toLeftOf="@+id/tvPast"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvPast"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="12dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:backgroundTint="@color/black"
                                android:background="@drawable/ic_content_paste"
                                />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvDownloadNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Download Now"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:layout_below="@+id/etContainer"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"/>



                        <LinearLayout
                            android:id="@+id/RLDownloadLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDownloadNow"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvWithMark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/et_back"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="With Watermark"
                                android:textAllCaps="false"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tvWithoutMark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/et_back"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:padding="14dp"
                                android:text="Without Watermark"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relDetailsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_white"
                        android:elevation="3dp"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tvHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:text="Video Details"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                        <ImageView
                            android:id="@+id/imgPicture"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:layout_below="@+id/tvHeader"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/imgPicture"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/tvHeader"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvKeywords"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"/>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <TextView
                                    android:id="@+id/tvCommentCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:text="0" />

                                <TextView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_toStartOf="@+id/tvCommentCount"
                                    android:background="@drawable/ic_action_comment"
                                    android:layout_centerVertical="true"/>


                            </RelativeLayout>





                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/RLDownloadLayout"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <include
                            android:id="@+id/layoutHowTo"
                            layout="@layout/layout_how_to" />

<!--                        <com.google.android.gms.ads.AdView-->
<!--                            android:id="@+id/adView"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            android:layout_marginBottom="20dp"-->
<!--                            ads:adSize="MEDIUM_RECTANGLE"-->
<!--                            ads:adUnitId="@string/admob_banner_ad"></com.google.android.gms.ads.AdView>-->
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true"
            ads:adUnitId="@string/admob_banner_ad">

        </com.google.android.gms.ads.AdView>


    </RelativeLayout>
</layout>
