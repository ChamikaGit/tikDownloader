<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLTopLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_blue"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/relToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imBack"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="0dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_back" />

                        <TextView
                            android:id="@+id/TVTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imBack"
                            android:text="Tik Tok Downloader"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/imInfo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_about"
                            android:tint="@color/white"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLEdittextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relToolbar"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_dark_filled_coners"
                        android:elevation="3dp"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/etContainer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <EditText
                                android:id="@+id/et_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/tvPast"
                                android:background="@drawable/et_black_dark_filled"
                                android:hint="Paste Link"
                                android:padding="15dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvPast"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_green_filled"
                                android:gravity="center"
                                android:text="Past"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvDownloadNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etContainer"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Download Now"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/RLDownloadLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDownloadNow"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWithMark"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/et_blue_outer"
                                android:gravity="center"
                                android:padding="14dp"
                                android:singleLine="true"
                                android:text="With Watermark"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:id="@+id/tvWithoutMark"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_green_filled">

                                <TextView
                                    android:id="@+id/tvWithoutMarkText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:padding="14dp"
                                    android:singleLine="true"
                                    android:text="Without Watermark"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvLockIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/tvWithoutMarkText"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:visibility="gone"
                                    android:background="@drawable/ic_lock"/>


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/relOpenTiktok"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/RLEdittextLayout"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/et_blue_filled"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:id="@+id/LLOpenTikTok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:padding="14dp">

                                    <RelativeLayout
                                        android:id="@+id/TVTitleContainer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ProgressBar
                                            android:id="@+id/progressBar"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:indeterminateTint="@color/pink"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_tiktok_round"
                                            android:tint="@color/white" />


                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@+id/TVTitleContainer"
                                        android:text="Open TikTok"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />
                                </RelativeLayout>

                            </RelativeLayout>


                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RLTopLayout"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <FrameLayout
                        android:id="@+id/native_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp" />

                    <include
                        android:id="@+id/native_ad_banner_shimmer"
                        layout="@layout/native_ad_banner_rectangle_shimmer"
                        android:visibility="visible" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/bg_dark_filled_coners"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/relHowToDownloadView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="How to Download"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ic_back"
                            android:rotation="-90" />

                    </RelativeLayout>


                    <include
                        android:id="@+id/relHowToDownloadContainerNew"
                        layout="@layout/layout_how_to"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_ad">

        </com.google.android.gms.ads.AdView>


    </RelativeLayout>
</layout>
